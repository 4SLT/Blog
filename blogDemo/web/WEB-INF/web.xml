<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ArticleListServlet</servlet-name>
        <servlet-class>_4slt.controller.ArticleListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticleListServlet</servlet-name>
        <url-pattern>/ArticleListServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SaveMessageServlet</servlet-name>
        <servlet-class>_4slt.controller.SaveMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveMessageServlet</servlet-name>
        <url-pattern>/SaveMessageServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>KeywordListServlet</servlet-name>
        <servlet-class>_4slt.controller.KeywordListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>KeywordListServlet</servlet-name>
        <url-pattern>/KeywordListServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchArticleServlet</servlet-name>
        <servlet-class>_4slt.controller.SearchArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchArticleServlet</servlet-name>
        <url-pattern>/SearchArticleServlet</url-pattern>
    </servlet-mapping>


    <listener>
        <listener-class>_4slt.util.ContextListener</listener-class>
    </listener>


</web-app>